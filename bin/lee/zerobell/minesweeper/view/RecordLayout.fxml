<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lee.zerobell.minesweeper.ViewRecordController">
   <children>
      <VBox prefHeight="280.0" prefWidth="280.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <HBox alignment="BOTTOM_CENTER" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefWidth="90.0" text="Level" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" prefWidth="90.0" text="Name">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" prefWidth="90.0" text="Record" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefWidth="90.0" text="Easy" textAlignment="CENTER" />
                  <Label fx:id="easy_name" alignment="CENTER" prefWidth="90.0" text="zerobell" />
                  <Label fx:id="easy_record" alignment="CENTER" prefWidth="90.0" text="999" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefWidth="90.0" text="Normal" textAlignment="CENTER" />
                  <Label fx:id="normal_name" alignment="CENTER" prefWidth="90.0" text="zerobell" />
                  <Label fx:id="normal_record" alignment="CENTER" prefWidth="90.0" text="999" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefWidth="90.0" text="Hard" textAlignment="CENTER" />
                  <Label fx:id="hard_name" alignment="CENTER" prefWidth="90.0" text="zerobell" />
                  <Label fx:id="hard_record" alignment="CENTER" prefWidth="90.0" text="999" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="200.0">
               <children>
                  <Button fx:id="resetBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#reset" text="Reset" textAlignment="CENTER" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
